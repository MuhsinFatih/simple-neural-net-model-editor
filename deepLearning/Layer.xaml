<UserControl x:Class="deepLearning.Layer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:deepLearning"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="83">
    <Grid MaxWidth="83">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Viewbox>
            <Label x:Name="label_layerName" Background="#7FBFBFBF" Padding="5,15,5,5">Layer name</Label>
        </Viewbox>
        <UniformGrid x:Name="Content" Width="83" Columns="1" Background="Transparent" Grid.Row="1">
        </UniformGrid>
    </Grid>
</UserControl>
