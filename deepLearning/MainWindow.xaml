<Window x:Class="deepLearning.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:deepLearning"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1050" Background="#FF4768B4">
    <Grid Name="mainGrid">
        
        <Border Margin="10,0,0,0" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="3" HorizontalAlignment="Left">
            <UniformGrid  Width="140" Height="140"   Rows="2">
                <UniformGrid Grid.Row="1" Columns="2" >
                    <Rectangle Name="btn1" Fill="#FFF4F4F5" Stroke="Black" Grid.Column="1"/>
                    <Rectangle Fill="#FFF4F4F5" Stroke="Black" Grid.Column="2"/>
                </UniformGrid>
                <UniformGrid Grid.Row="2" Columns="2">
                    <Rectangle Fill="#FFF4F4F5" Stroke="Black" Grid.Column="1"/>
                    <Rectangle Fill="#FFF4F4F5" Stroke="Black" Grid.Column="2"/>
                </UniformGrid>
            </UniformGrid>
        </Border>

        <UniformGrid Height="671" Margin="265,0,0,-0.333" VerticalAlignment="Top" Width="513" HorizontalAlignment="Left" Rows="1">
            <UniformGrid HorizontalAlignment="Center" Margin="0,30" Width="83" Columns="1">

                <Ellipse x:Name="btn2" Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="52" Stroke="Black" VerticalAlignment="Center" Width="52"/>
                <Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="52" Stroke="Black" VerticalAlignment="Center" Width="52"/>
                <Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="52" Stroke="Black" VerticalAlignment="Center" Width="52"/>
                <Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="52" Stroke="Black" VerticalAlignment="Center" Width="52"/>
            </UniformGrid>
            <UniformGrid HorizontalAlignment="Center" Margin="0,30" Width="83" Columns="1">

                <Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="52" Stroke="Black" VerticalAlignment="Center" Width="52"/>
                <Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="52" Stroke="Black" VerticalAlignment="Center" Width="52"/>
                <Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="52" Stroke="Black" VerticalAlignment="Center" Width="52"/>
                <Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="52" Stroke="Black" VerticalAlignment="Center" Width="52"/>
            </UniformGrid>
            <UniformGrid HorizontalAlignment="Center" Margin="0,30" Width="83" Columns="1">

                <Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="52" Stroke="Black" VerticalAlignment="Center" Width="52"/>
                <Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="52" Stroke="Black" VerticalAlignment="Center" Width="52"/>
                <Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="52" Stroke="Black" VerticalAlignment="Center" Width="52"/>
                <Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="52" Stroke="Black" VerticalAlignment="Center" Width="52"/>
            </UniformGrid>
            <UniformGrid HorizontalAlignment="Center" Margin="0,30" Width="83" Columns="1">

                <Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="52" Stroke="Black" VerticalAlignment="Center" Width="52"/>
                <Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="52" Stroke="Black" VerticalAlignment="Center" Width="52"/>
                <Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="52" Stroke="Black" VerticalAlignment="Center" Width="52"/>
                <Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="52" Stroke="Black" VerticalAlignment="Center" Width="52"/>
                <Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="52" Stroke="Black" VerticalAlignment="Center" Width="52"/>
                <Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="52" Stroke="Black" VerticalAlignment="Center" Width="52"/>
                <Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="52" Stroke="Black" VerticalAlignment="Center" Width="52"/>
                <Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="52" Stroke="Black" VerticalAlignment="Center" Width="52"/>
            </UniformGrid>
        </UniformGrid>
    </Grid>
</Window>
