<UserControl x:Class="deepLearning.Link"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:deepLearning"
             mc:Ignorable="d" d:DesignWidth="300" Height="40" RenderTransformOrigin="0,0.5" Background="Transparent">
	<Canvas x:Name="canvas">
		<Line x:Name="line" Stroke="Gray" StrokeThickness="2" X1="0" X2="{Binding ActualWidth, ElementName=canvas, Mode=OneWay}" Y1="20" Y2="20"/>
		<Grid Width="{Binding ActualWidth, ElementName=canvas}" Height="{Binding ActualHeight, ElementName=canvas, Mode=OneWay}">
			<Border x:Name="border" Visibility="Hidden" HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" RenderTransformOrigin="0.5,0.5" ClipToBounds="True" Background="#FF4768B4">
				<Label x:Name="label_weight" Content="Weight" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center" Background="{x:Null}" RenderTransformOrigin="0.5,0.5" Foreground="White"/>
			</Border>
		</Grid>
	</Canvas>
</UserControl>
